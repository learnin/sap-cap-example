<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form">
	<forms:SimpleForm
		class="sapUxAPObjectPageSubSectionAlignContent"
		layout="ColumnLayout"
		columnsM="2"
		columnsL="3"
		columnsXL="4"
		editable="true">

		<Label text="{i18n>label.id}" />
		<Text text="{ID}" />

		<Label text="{i18n>label.title}" required="true" />
		<Input value="{title}" />

		<Label text="{i18n>label.stock}" required="true" />
		<Input value="{path: 'stock', type: 'sap.ui.model.type.Integer'}" />
	</forms:SimpleForm>
</core:FragmentDefinition>
