<mvc:View
	controllerName="com.example.example01.controller.book.Book"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	height="100%">

	<m:Page
		title="{i18n>Book}"
		showNavButton="true"
		navButtonPress=".onNavBack">
		<ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
			<headerTitle>
				<ObjectPageDynamicHeaderTitle>
					<expandedHeading>
						<m:Title text="{ID}" />
					</expandedHeading>

					<snappedHeading>
						<m:VBox>
							<m:Title text="{ID}" />
						</m:VBox>
					</snappedHeading>

					<snappedTitleOnMobile>
						<m:Title text="{ID}" />
					</snappedTitleOnMobile>

					<actions>
						<m:Button text="Edit" type="Emphasized" press=".onEdit" />
					</actions>
				</ObjectPageDynamicHeaderTitle>
			</headerTitle>

			<headerContent>
				<m:FlexBox wrap="Wrap" fitContainer="true">
					<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
						<m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
							<m:Label text="{i18n>titleLabelText}" class="sapUiTinyMarginEnd" />
							<m:Text text="{title}" />
						</m:HBox>
					</m:VBox>
				</m:FlexBox>
			</headerContent>

			<sections>
				<ObjectPageSection titleUppercase="false" title="{i18n>generalInformation}">
					<subSections>
						<ObjectPageSubSection title="{i18n>generalInformation}" showTitle="false" id="generalInformationSubSection">
							<blocks>
								<!-- Fragment を onInit で差し込むことも可能だが、Fragment 分の領域を確保しておかないと初期表示時に下にスクロールしてしまうためビューで差し込む -->
								<core:Fragment fragmentName="com.example.example01.view.book.BookDisplayGeneralInformation" type="XML" />
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="{i18n>items}">
					<subSections>
						<ObjectPageSubSection title="{i18n>items}">
							<blocks>
								<m:Table
									class="sapUxAPObjectPageSubSectionAlignContent"
									width="auto"
									items="{
										path: 'modelName>/Parh',
										parameters: {
											$count: true
										}
									}">
									<m:headerToolbar>
										<m:OverflowToolbar>
											<m:Title text="items (5)" level="H2" />
											<m:ToolbarSpacer />
											<m:OverflowToolbarButton tooltip="Settings"
												text="Settings"
												icon="sap-icon://action-settings" />
										</m:OverflowToolbar>
									</m:headerToolbar>

									<m:columns>
										<m:Column>
											<m:Text text="Document Number" />
										</m:Column>
										<m:Column minScreenWidth="Tablet" demandPopin="true">
											<m:Text text="Company" />
										</m:Column>
										<m:Column minScreenWidth="Tablet" demandPopin="true">
											<m:Text text="Contact Person" />
										</m:Column>
										<m:Column  minScreenWidth="Tablet" demandPopin="true">
											<m:Text text="Posting Date" />
										</m:Column>
										<m:Column hAlign="End">
											<m:Text text="Amount (Local Currency)" />
										</m:Column>
									</m:columns>

									<m:items>
										<m:ColumnListItem>
											<m:Text text="{modelName>DocumentNumber}" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
									</m:items>
								</m:Table>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
            <m:Toolbar visible="{state>/isEditing}">
            <m:ToolbarSpacer/>
            <m:Button
                id="saveButton"
                type="Emphasized"
                text="{i18n>saveButtonText}"
                enabled="{= ${message>/}.length === 0}"
                press=".onSave"/>
            <m:Button
                id="resetChangesButton"
                text="{i18n>resetChangesButtonText}"
                press=".onResetChanges"/>
            </m:Toolbar>
        </m:footer>
	</m:Page>
</mvc:View>
