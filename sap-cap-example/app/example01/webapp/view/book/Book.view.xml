<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	height="100%">

	<m:Page
		title="{i18n>Book}"
		showNavButton="true">
		<ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
			<headerTitle>
				<ObjectPageDynamicHeaderTitle>
					<expandedHeading>
						<m:Title text="id" />
					</expandedHeading>

					<snappedHeading>
						<m:VBox>
							<m:Title text="id" />
						</m:VBox>
					</snappedHeading>

					<snappedTitleOnMobile>
						<m:Title text="id" />
					</snappedTitleOnMobile>

					<actions>
						<m:Button text="Edit" type="Emphasized" />
					</actions>
				</ObjectPageDynamicHeaderTitle>
			</headerTitle>

			<headerContent>
				<m:FlexBox wrap="Wrap" fitContainer="true">
					<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
						<m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
							<m:Label text="{i18n>titleLabelText}" class="sapUiTinyMarginEnd" />
							<m:Text text="title" />
						</m:HBox>
					</m:VBox>
				</m:FlexBox>
			</headerContent>

			<sections>
				<ObjectPageSection titleUppercase="false" title="{i18n>generalInformation}">
					<subSections>
						<ObjectPageSubSection title="{i18n>generalInformation}" showTitle="false">
							<blocks>
								<!-- 編集時との切り替えはフラグメントに外だしして差し替えることで対応するっぽい。https://sapui5.hana.ondemand.com/#/entity/sap.ui.layout.form.SimpleForm/sample/sap.ui.layout.sample.SimpleForm354 -->
								<forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent"
									layout="ColumnLayout"
									columnsM="2"
									columnsL="3"
									columnsXL="4">

									<m:Label text="{i18n>idLabelText}" />
									<m:Text text="id" />

									<m:Label text="{i18n>titleLabelText}" />
									<m:Text text="title" />

									<m:Label text="{i18n>stockLabelText}" />
									<m:Text text="stock" />

									<m:Label text="Expected Delivery Date" />
									<m:Text text="June 23, 2018" />

									<m:Label text="Factory" />
									<m:Text text="Orlando, FL" />

									<m:Label text="Supplier" />
									<m:Text text="Robotech" />

									<m:Label text="Model" />
									<m:Text text="Robot Arm Series 9" />
								</forms:SimpleForm>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="{i18n>items}">
					<subSections>
						<ObjectPageSubSection title="{i18n>items}">
							<blocks>
								<m:Table class="sapUxAPObjectPageSubSectionAlignContent" width="auto">
									<m:headerToolbar>
										<m:OverflowToolbar>
											<m:Title text="items (5)" level="H2" />
											<m:ToolbarSpacer />
											<m:OverflowToolbarButton tooltip="Settings"
												text="Settings"
												icon="sap-icon://action-settings" />
										</m:OverflowToolbar>
									</m:headerToolbar>

									<m:columns>
										<m:Column>
											<m:Text text="Document Number" />
										</m:Column>
										<m:Column minScreenWidth="Tablet" demandPopin="true">
											<m:Text text="Company" />
										</m:Column>
										<m:Column minScreenWidth="Tablet" demandPopin="true">
											<m:Text text="Contact Person" />
										</m:Column>
										<m:Column  minScreenWidth="Tablet" demandPopin="true">
											<m:Text text="Posting Date" />
										</m:Column>
										<m:Column hAlign="End">
											<m:Text text="Amount (Local Currency)" />
										</m:Column>
									</m:columns>

									<m:items>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
										<m:ColumnListItem>
											<m:Text text="10223882001820" />
											<m:Text text="Jologa" />
											<m:Text text="Denise Smith" />
											<m:Text text="11/15/19" />
											<m:Text text="12,897.00 EUR" />
										</m:ColumnListItem>
									</m:items>
								</m:Table>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
	</m:Page>
</mvc:View>
