<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form">
	<forms:SimpleForm
		class="sapUxAPObjectPageSubSectionAlignContent"
		layout="ColumnLayout"
		columnsM="2"
		columnsL="3"
		columnsXL="4">

		<Label text="{i18n>label.id}" />
		<Text text="{ID}" />

		<Label text="{i18n>label.title}" />
		<Text text="{title}" />

		<Label text="{i18n>label.stock}" />
		<Text text="{
			path: 'stock',
			type: 'sap.ui.model.type.Integer',
			formatOptions: {minFractionDigits: 2, groupingEnabled: true}
		}" />
	</forms:SimpleForm>
</core:FragmentDefinition>
