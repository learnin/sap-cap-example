<mvc:View
	controllerName="com.example.example01.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">
		<content>
			<Button id="displayNotFoundBtn" text="{i18n>DisplayNotFound}" press=".onDisplayNotFound" class="sapUiTinyMarginEnd"/>
			<Button id="navToBookListBtn" text="{i18n>navToBookList}" press=".onNavToBookList" class="sapUiTinyMarginEnd"/>
			<Button
                text="{i18n>getBooksFromOData}"
                press=".onGetBooksFromOData"/>
		</content>
	</Page>
</mvc:View>
